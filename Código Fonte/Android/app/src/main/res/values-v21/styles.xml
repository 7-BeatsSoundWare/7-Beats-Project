<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="searchViewStyle">@style/MainSearchStyle</item>
    </style>

    <style name="MainSearchStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@color/colorAccent</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/colorPrimaryDark</item>
        <!-- Close button icon -->
        <item name="closeIcon">@android:drawable/ic_menu_close_clear_cancel</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <!-- Go/commit button icon -->
        <item name="goIcon">@drawable/abc_ic_go_search_api_mtrl_alpha</item>
        <!-- Commit icon shown in the query suggestion row -->
    </style>
</resources>